{
  "name": "vite-plugin-public-assets-types",
  "version": "0.1.1",
  "description": "A Vite plugin to generate TypeScript types for public assets",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "license": "MIT",
  "files": [
    "src",
    "dist",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "prepublishOnly": "pnpm build",
    "build": "tsdown",
    "type:check": "tsc --noEmit",
    "lint": "eslint .",
    "format": "pnpm -w format",
    "test:unit": "vitest --run",
    "test": "pnpm test:unit"
  },
  "keywords": [],
  "author": "Ahmed Abdelbaset",
  "peerDependencies": {
    "vite": ">=6.0.0 || >=7.0.0"
  },
  "devDependencies": {
    "@ahmedbaset/config": "workspace:*",
    "@types/node": "^24.1.0",
    "rollup": "^4.46.0",
    "tsdown": "^0.12.0",
    "typescript": "^5.8.2",
    "vite": "^6.3.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmedbaset/vite-plugin-public-assets-types"
  }
}
